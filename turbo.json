{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "MONGODB_URI",
    "NEXT_PUBLIC_GOOGLE_MAPS_APY_KEY",
    "JWT_SECRET",
    "EMAIL_PROVIDER",
    "PASSWORD_PROVIDER",
    "NODE_ENV"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
